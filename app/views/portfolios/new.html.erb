<header>
  <% if @current_user %>
    <%= link_to "Welcome, #{@current_user.name}!", user_path(@current_user) %>
    <%= link_to "Sign Out", session_path, method: :delete %>
    <%= link_to "Main Menu" , menu_main_path %>
  <% else %>
    <%= link_to "Sign Up", new_user_path %>
    <%= link_to "Sign In", new_session_path %>
  <% end %>
</header>


<h2>New Portfolio for User <%=@current_user.name%> </h2>
<h2> Projects to be added to this portfolio = <%=@projects%> </h2>


<%= form_for [@current_user, @portfolio] do |f| %>

<%= hidden_field_tag :projects, @projects %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description%>
<%= f.text_area :description%>

<%= f.submit "Submit" %>
<% end %>
