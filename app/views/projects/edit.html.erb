<header>
  <% if @current_user %>
    <%= link_to "Welcome, #{@current_user.name}!", user_path(@current_user) %>
    <%= link_to "Sign Out", session_path, method: :delete %>
    <%= link_to "Main Menu" , menu_main_path %>
  <% else %>
    <%= link_to "Sign Up", new_user_path %>
    <%= link_to "Sign In", new_session_path %>
  <% end %>
</header>
<h1>Project#new</h1>
<p>Find me in app/views/project/new.html.erb</p>

<h2>New project for User <%=@current_user.name%> </h2>
<%= form_for [@current_user, @project] do |f| %>
<%= f.label :name %>
<div id="project_entry"
<%= f.text_field :name %>

<%= f.label :header1 %>
<%= f.text_field :header1%>

<%= f.label :header2 %>
<%= f.text_field :header2%> <br>

   <%= f.label :description%>
   <%= f.text_area :description%> <br>

    <%= f.label :screen_img_url %>
    <%= f.url_field :screen_img_url %>

<%= f.label :host_url %>
<%= f.url_field :host_url %> <br>

<%= f.submit "Submit" %>

</div>

<% end %>
